<Window x:Class="WpfHalloWereld.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfHalloWereld"
        mc:Ignorable="d"
        Title="WPF Hallo Wereld" Height="250" Width="500">
    <Grid Background="#FFE1E799">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="24*"/>
            <ColumnDefinition Width="101*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="LblMessage" Content="Hallo! hoe is je naam?" HorizontalAlignment="Left" Margin="40,30,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <TextBox x:Name="TxtName" HorizontalAlignment="Left" Margin="40,60,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="285" Height="20" Grid.ColumnSpan="2"/>
        <Button x:Name="BtnOK" Content="OK" HorizontalAlignment="Left" Height="20" Margin="250,60,0,0" VerticalAlignment="Top" Width="45" Click="BtnOK_Click" Grid.Column="1"/>
        <Button x:Name="Btnherstel" Grid.Column="1" Content="HERSTEL" HorizontalAlignment="Left" Margin="306,60,0,0" VerticalAlignment="Top" Height="20" Width="60" RenderTransformOrigin="0.435,-0.234" Click="Btnherstel_Click"/>

    </Grid>
</Window>
