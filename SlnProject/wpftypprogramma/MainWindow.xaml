<Window x:Class="WpfTypProgramma.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WpfTypProgramma" Height="500" Width="900">
    <Grid>
        <StackPanel>
            <TextBlock Text="Kies een taal:" Margin="10"/>

            <RadioButton x:Name="RbEngels" Content="Engels" Checked="RadioButton_Checked" Margin="10"/>
            <RadioButton x:Name="RbNederlands" Content="Nederlands" Checked="RadioButton_Checked" Margin="10"/>
            <RadioButton x:Name="RbFrans" Content="Frans" Checked="RadioButton_Checked" Margin="10"/>

            <TextBox x:Name="txbTypen" TextChanged="TextBoxInput_TextChanged" Margin="10"/>
            <TextBlock x:Name="txbZin" Margin="10" TextWrapping="Wrap"/>
            <Label x:Name="labelScore" Content="" Margin="10"/>
            <Button Content="Stop" Click="ButtonStop_Click" Width="104" Height="46"/>
            <Image Height="105" Width="252" Source="/Logo-Odisee-oud-696x362-3812095767.jpg"/>
        </StackPanel>
    </Grid>
</Window>
