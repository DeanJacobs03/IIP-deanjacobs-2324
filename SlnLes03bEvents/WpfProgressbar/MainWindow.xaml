<Window x:Class="WpfProgressbar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WpfProgressbar" Height="200" Width="300">
    <Grid>
        <Rectangle x:Name="ProgressRectangle" HorizontalAlignment="Left" Height="20" Margin="20,20,0,0" Stroke="Black" VerticalAlignment="Top" Width="200" Fill="Green" Visibility="Collapsed"/>
        <Label x:Name="LblProgress" Content="0%" HorizontalAlignment="Left" Margin="255,19,0,0" VerticalAlignment="Top" Height="36" Width="45"/>
        <Button x:Name="AnnuleerButton" Content="ANNULEREN" HorizontalAlignment="Center" Margin="0,65,0,0" VerticalAlignment="Top" Width="88" Click="CancelButton_Click" IsEnabled="False" Height="27"/>
        <Button x:Name="StartButton" Content="START" HorizontalAlignment="Left" Margin="10,65,0,0" VerticalAlignment="Top" Width="79" Click="StartButton_Click" Height="27"/>
    </Grid>
</Window>